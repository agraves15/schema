<p id="notice"><%= notice %></p>

<h1>Listing Schemes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schemes.each do |scheme| %>
      <tr>
        <% if !scheme.private || scheme.users.include?(current_user) %>
          <td><%= link_to scheme.name, scheme %></td>
          <% scheme.colors.each do |color| %>
            <td><%= color.name %>, <%= color.r %>, <%= color.g %>, <%= color.b %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Scheme', new_scheme_path %>
