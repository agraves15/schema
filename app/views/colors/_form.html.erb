<%= form_for(@color) do |f| %>
  <% if @color.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <% @color.errors.full_messages.each do |message| %>
        <%= message %><br>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
